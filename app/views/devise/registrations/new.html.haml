= stylesheet_link_tag "devise", media: :all
.wrapper
  .showMain
    .showMain__logo
      = image_tag "argument_space_logo.png"
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :nickname, "ニックネーム(8文字以内)"
        %br/
        = f.text_field :nickname, autofocus: true, class: "form-control", id: "text1"
      .field
        = f.label :email, "メールアドレス"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "text2"
      .field
        = f.label :password, "パスワード(6文字以上  )"
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "form-control", id: "text3"
      .field
        = f.label :password_confirmation, "パスワードの再入力"
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "text4"
        %br/
      .actions
        = f.submit "登録する", class: "submit-btn"
